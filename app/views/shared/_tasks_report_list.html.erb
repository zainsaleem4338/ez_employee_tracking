<table class="table table-striped table-bordered" id="task_table" style="width:100%">
  <thead>
    <tr>
      <th>Project Name</th>
      <th>Name</th>
      <th>Start Date</th>
      <th>Expected End Date</th>
      <th>Assigned To</th>
      <th>Assigned Type</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task|%>
      <tr>
        <td><%= task.project.name %></td>
        <td><%= task.name %></td>
        <td><%= task.start_date.to_formatted_s(:long_ordinal) %></td>
        <td><%= task.expected_end_date.to_formatted_s(:long_ordinal) %></td>
        <td><%= get_assignable_name(task) %></td>
        <td><%= get_assignable_type(task) %></td>
        <td><span class="badge badge-success"><%= task.status %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% unless @pagination_disallow.present? %>
  <%= will_paginate @tasks, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, list_classes: %w(pagination justify-content-center) %>
<% end %>


