<% if flash.present? %>
  <div class="container">
    <div class='alert alert-<%="#{flash.keys[0]}" %>' id="flash-alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
      <div class="mb-0">
         <% flash.each do |name, msg| %>
            <i class="fa fa-check pr-2"></i><%= content_tag :span, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>
