<% if !@tasks.empty? %> 
<div class="table-responsive-sm">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Start Date</th>
        <th scope="col">Expected End Date</th>
        <th scope="col">Assigned To</th>
        <th scope="col">Status</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task|%>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.start_date.to_date %></td>
        <td><%= task.expected_end_date.to_date %></td>
        <td><%= get_assignable_name(task) %></td>
        <td><span class="badge badge-success"><%= task.status %></span></td>
        <td>
          <%= link_to 'Change Status', '#', { class: "btn btn-outline-secondary", 'data-toggle' => 'modal',  'data-target' => '#taskStatusModal_'+task.id.to_s} %>

          <div class="modal fade" id="taskStatusModal_<%=task.id%>" tabindex="-1" role="dialog" aria-labelledby="taskStatusModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="taskStatusModalLabel">Change Task Status</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div>
                  <strong>Task Title:</strong>
                    <%= task.name.capitalize %>
                  </div><br>
                  <div>
                    <%= form_for task, url: update_status_department_project_task_path(@department, @project,task) do |form| %>
                    <%= form.select(:status, ["In Progress","Ready to Review", "Review Completed"], {}, {class: 'form-control'}) %>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <%= form.submit class: "btn btn-regular" %>
                  <%end%>
                </div>
              </div>
            </div>
          </div>

          <%= link_to 'Edit or Assign the task', edit_department_project_task_path(@department, @project, task), class: "btn btn-outline-secondary" %>
          <%= link_to 'Destroy', department_project_task_path(@department, @project,task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>  
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>              
<% end %>