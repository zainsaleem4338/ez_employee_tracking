<% content_for :head do %>
  <%= javascript_include_tag 'employee_tasks' %>
<% end %>

<% provide(:title, "My Tasks")%>

<div class="container" id="tasks_table_1">
  <table id="tasks_table" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th>Task Name</th>
      <th>Status</th>
      <th>Task Complexity</th>
      <th>Expected End Date</th>
      <th>Hours Worked</th>
      <th>Add logtime</th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= task.name %>
      </td>
      <td>
        <%= task.status %>
      </td>
      <td>
        <%= task.complexity %>
      </td>
      <td>
        <%= task.expected_end_date.to_formatted_s(:short) %>
      </td>
      <td>
        <%= task_logtime(task) %>
      </td>
      <td>
        <%= form_for task.task_time_logs.where(employee_id: current_employee.id).first, url: update_task_logtime_path(task), remote: true, html: { method: :patch } do |form|%>
        <div class="row">
          <div class="col-md">
            <%= form.text_field :hours , class: 'form-control' %>
          </div>
          <div class="col-md">
            <%= form.submit 'Submit log-time', class: 'btn btn-regular', id: task.name+"_submit", data: { "disable-with" => "wait"} %>
          </div>
        </div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
