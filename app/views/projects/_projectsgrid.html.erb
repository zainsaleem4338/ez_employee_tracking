<div class="row">
  <% @projects.each do |project| %>
  <tbody>
    <div class="card col-sm-4">
      <div class="card-body">
        <h5 class="card-title"><%= project.name %></h5>
        <span class="badge badge-primary"><%= project.status %></span>
        <p class="card-text"><strong>Department: </strong><%= project.department.name %></p>
        <p class="card-text"><strong>Start Date: </strong><%= project.start_date.to_date %></p>
        <p class="card-text"><strong>Expected End Date  : </strong><%= project.expected_end_date.to_date %></p>
        <%= link_to 'Details', department_project_tasks_url(@department,project), class: "btn btn-outline-primary" %>
        <%= link_to 'Edit', edit_department_project_path(@department,project), class: "btn btn-outline-secondary" %>
        <%= link_to 'Destroy', department_project_path(@department,project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>       
      </div>
    </div>
    <% end %>
  </tbody>
</div>