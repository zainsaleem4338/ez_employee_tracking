<div class="bg-gradient-primary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <div class="row">
              <div class="col-lg-6 d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h3 text-second mb-4"><%= t('.sign_in') %></h3>
                  </div>
                  <%= render 'layouts/errors'%>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name, html: {class: "user"})) do |f| %>
                    <div class="form-group">
                      <%= f.label :email %>
                      <%= f.email_field :email, autofocus: true, autocomplete: 'email', id: '_session-email',class: 'form-control form-control-user' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password %>
                      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control form-control-user' %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="form-group">
                          <div class="custom-control custom-checkbox small">
                            <%= f.check_box :remember_me, class: 'custom-control-input'%>
                            <%= f.label :remember_me, class: 'custom-control-label' do %>
                              <%= resource.class.human_attribute_name('remember_me') %>
                            <% end %>
                          </div> 
                      </div>
                    <% end %>

                    <div class="form-group">
                      <%= f.submit  t('.sign_in'), class: 'btn btn-regular btn-user btn-block' %>
                    </div>
                  <% end %>
                  <%= render 'devise/shared/links' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function() {
    var email = getUrlVars()["email"];
    if (email !== undefined) {
      document.getElementById('_session-email').value = email;
    }
  });
</script>