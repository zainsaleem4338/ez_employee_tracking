<!DOCTYPE html>
<html>
	<head>
		<title>EzEmployeeTracking</title>
		<%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' %>
		<%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' %>
		<%= javascript_include_tag 'https://code.jquery.com/jquery-3.2.1.slim.min.js' %>
		<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' %>
		<%= stylesheet_link_tag 'application', media: 'all',
		'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= stylesheet_link_tag "https://cdn.rawgit.com/nizarmah/calendar-javascript-lib/master/calendarorganizer.min.css" %>

		<!-- For Calendar -->
		<%= javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js" %>
		<%= javascript_include_tag "//code.jquery.com/jquery-1.11.1.min.js" %>

		<%= csrf_meta_tags %>

		<%= render 'layouts/shim' %>
	</head>
	<body>
		<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
		<div class="container">
			<%= yield %>
		</div>
		<%= javascript_include_tag "https://cdn.rawgit.com/nizarmah/calendar-javascript-lib/master/calendarorganizer.min.js" %>
	</body>
</html>
