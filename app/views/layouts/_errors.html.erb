<% if !employee_signed_in? && flash.present? %>
<div class="container">
  <div class='alert alert-<%="#{flash.keys.first}" %>'>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
    <ul class="mb-0 small text-gray-400">
       <% flash.each do |name, msg| %>
          <li><%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></li>
        <% end %>
    </ul>
  </div>
</div>
<% end %>

