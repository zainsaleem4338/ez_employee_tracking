<div class="container">
  <div class='alert alert-danger alert-<%="#{flash.keys.first}" %>'>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
    <% if flash.keys.first == 'alert' %>
      <h4 class="alert-heading"><%= pluralize(flash.keys.count, "error") %> prohibited this employee from being saved:</h4>
    <% end %>
    <ul class="mb-0">
       <% flash.each do |name, msg| %>
          <li><%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %></li>
        <% end %>
    </ul>
  </div>
</div>
<% end %>

