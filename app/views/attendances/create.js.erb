<% if @employee_attendance.valid? %>
  var present_marked_btn = document.getElementsByClassName("mark_present");;
  present_marked_btn[0].style.display = "none";
  
  setTimeout(function(){location.reload()}, 3000);

  var present_marked_btn = document.getElementsByClassName("update_attendance");;
  present_marked_btn[0].style.display = "inline-flex";

<% else %>
	$('#notifications-flash').append("<%= j render(:partial => 'shared/notification') %>");
<% end %>