<% content_for :bread_crumbs do %>
  <div class="row d-flex p-1">
      <p class="m-0 align-middle">Departments</p>
      <div class="m-0 pl-2">
        <% if can? :create, Department %>
          <%= link_to new_department_path, remote: :true, class: "btn btn-regular btn-circle btn-md" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        <% else %>
          <%= link_to "All Departments", departments_path, remote: true, class: "btn btn-regular active"%>
          <%= link_to "My Departments", departments_path(show_employees_only: true), remote: true, class: "btn btn-regular" %>
        <% end %>
      </div>
  </div>
<% end %>
<div class="container">
  <% if @departments.present? %>
    <div id="departments_grid" >
    <%= render partial: 'departmentgrid', locals: {departments: @departments}  %>
  </div>
  <% else %>
    <%= render '/shared/no_records' %>
  <% end %>
</div>

<div class="modal fade" id="add_department" tabindex="-1" role="dialog" aria-labelledby="department_modal_title" aria-hidden="true"></div>


