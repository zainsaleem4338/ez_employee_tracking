<% provide(:title, "All Departments") %>
<p id="notice"><%= notice %></p>

<% if @departments.length > 0 %>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.description %></td>
        <td><%= link_to 'Show', department, class: "btn btn-secondary" %>
        <%= link_to 'Edit', edit_department_path(department), class: "btn btn-info" %>
        <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
         <%= link_to 'See Teams', department_teams_path(department), class: "btn btn-info" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>

<%= link_to 'New Department', new_department_path, class: "btn btn-regular btn-primary"%>
