<style>
  .border-success{
    border-color: #6e2142 !important;
  }
</style>
<% if @companies.present? %>
  <br><br>
  <div class='div_email'>
    <div class='div_title'>
      <h4><i class="fas fa-user-ninja"></i> EZ Employee Tracking</h4>
      <hr>
    </div>
    <div class='container'>
      <div class='row'>
          <h4><span style='font-weight:bold;color:#6e2142'>Sign in</span></h4><br>
      </div>
      <div class='row'>
        <p><small>Choose your organization</small></p>
      </div>
      <div style='overflow-y: auto'>
        <% @companies.each do |company| %>
          <div class="card border-success mb-1 text-transition card-custom" style="max-width: 50rem;border-color: #6e2142;">
            <%= link_to 'http://' + company.subdomain + '.localhost:3000/employees/sign_in?email=' + @email , style: 'text-decoration:none', id: '_company-url' do %>
            <div class="card-body text-success">
              <h5 class="card-title">
                <span style="font-size:150%; padding-right:5%"><i class="fas fa-city"></i></span> <%= company.name %><span class='float-right'><i class="fas fa-chevron-right"></i></span>
              </h5>
            </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

<% else %>
  <h3>No Company Exists</h3>
<% end %>
<br>