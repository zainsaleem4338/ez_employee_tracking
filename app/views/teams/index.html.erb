<p id="notice"><%= notice %></p>

<h4 class="h4">All Teams</h4>

<% if @teams.length > 0%>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Team Leader</th>
      <th>Team Members</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.description %></td>
        <td><%= team.employee_lists('Team Leader').pluck(:name)[0] %></td>
        <td><%= team.employee_lists('Team Member').count %></td>
        <td><%= link_to 'Show', team, class: "btn btn-regular btn-secondary" %>
          <%= link_to 'Edit', edit_team_path(team), class: "btn btn-outline-secondary" %>
          <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Team', new_team_path, class: "btn btn-regular btn-primary" %>
