<% content_for :bread_crumbs do %>
  <div class="row d-flex p-1">
      <p class="m-0 align-middle"><%= link_to "#{@department.name.titleize}", department_path(@department), class: 
    'text-prim no-decoration' %> > <%= link_to "#{@team.name.titleize}", department_team_path(@department, @team), class: 
    'text-prim no-decoration' %> > Edit Team</p>
      <div class="m-0 pl-2">
        <%= link_to department_teams_path(@department), :class => "btn btn-regular btn-circle btn-md" do %>
          <i class="fas fa-arrow-left"></i>
        <% end %>
        </div>
  </div>
<% end %>

<%= nested_form_for([@department, @team, @team.with_employee_teams], url: department_team_path, html: { multipart: true }, method: :patch) do |form| %>
  <%= render 'form', form: form %>
<% end %>
