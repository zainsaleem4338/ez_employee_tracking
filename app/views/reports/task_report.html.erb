<div class="container">
  <%= form_tag(task_pdf_csv_report_reports_path, method: :get) do %>
    <div class="row">
      <div class="col-md-10"></div>
      <div class="col-md-2">
        <div class="dropdown dropdown-padding">
          <button type="button" class="btn btn-secondary btn-sm" data-toggle="dropdown">
            Export To
          </button>
          <div class="dropdown-menu">
             <%= submit_tag "PDF",name: 'pdf', class: "dropdown-item" %>
             <%= submit_tag "CSV",name: 'csv', class: "dropdown-item" %>
          </div>
        </div>
      </div>
    </div>
    <button class="btn btn-regular btn-md" type="button" data-toggle="collapse" data-target="#multiCollapseFilter" aria-expanded="false" aria-controls="multiCollapseFilter">Filter By</button>
    <div class="collapse multi-collapse mt-2" id="multiCollapseFilter">  
      <div class="row">
        <div class="col">
          <b class="filter-text">Start Date Range</b>
        </div>
        <div class="col">
          <b class="filter-text">Expected End Date Range</b>
        </div>
      </div>
      <div class="row filter-line-height">
        <div class="col">
          <div class="row">
            <div class="col-6">
              <%= date_field_tag 'created_start', nil, class: 'form-control filters' %>
            </div>
            <div class="col-6">
              <%= date_field_tag 'created_end', nil, class: 'form-control filters' %>
            </div>
          </div>
          <div id="created_date_range error"></div>
        </div>
        <div class="col">
          <div class="row">
            <div class="col-6">
              <%= date_field_tag 'deadline_start', nil, class: 'form-control filters' %> 
            </div>
            <div class="col-6">
              <%= date_field_tag 'deadline_end', nil, class: 'form-control filters' %>
            </div>
          </div>
           <span id="deadline_date_range error"></span>
        </div>
      </div>
      <div class="row mt-0">
        <div class="col-3">
          <b class="filter-text">Project</b>
        </div>
        <div class="col-3">
          <b class="filter-text">Status</b>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <%= text_field_tag 'project', nil, class: 'form-control filters' %>
        </div>
        <div class="col-3">
          <%= select_tag(:status, options_for_select([["--Choose Status--", ''], ["New", "New"], ["In Progress", "In Progress"], ["Review pending", "Review pending"], ["Reviewed", "Reviewed"], ["Completed", "Completed"]]),class: 'form-control filters') %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-6 btn-padding">
          <button class="btn btn-regular filters" type="button" id="update">Filter</button>&nbsp;
          <button class="btn btn-outline-danger filters" type="button" id="clear">Clear</button>
        </div>
      </div>
    </div>
  <% end %>
  <br>
  <div id="tasks_table">
    <%= render 'shared/tasks_report_list', tasks: @tasks %>
  </div>
</div> 
