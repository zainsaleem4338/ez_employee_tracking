<h1>All Employees List</h1>

<ul class="list-group">
  <% @employees.each do |e| %>
    <li class="list-group-item list-group-item-info">
      <ul>
        <li><%= e.name %></li>
        <li><%= e.email %></li>
        <li><%= e.role %></li> 
        <li><b><%= link_to "Delete this employee", delete_employee_path(e), method: :delete, data: { confirm: "Are you sure you want to delete the employee?" } %></b></li> 
      </ul>
    </li>
  <% end %>
</ul>